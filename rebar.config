{erl_opts, [debug_info]}.

{overrides, [
      {
        del, 
         [{erl_opts, [warnings_as_errors]}] 
      }
]
}.

{deps, [
        {cowboy, "2.6.1"},
        {recon, "2.4.0"},
        {eper, "0.99.1"},
        {opencensus, {git, "git@github.com:census-instrumentation/opencensus-erlang", {tag, "master"}}},
        {opencensus_erlang_prometheus, {git, "git@github.com:opencensus-beam/opencensus-prometheus", {tag, "master"}}},
        {eflame, {git, "https://github.com/slfritchie/eflame.git", {tag, "master"}}},
        prometheus, 
        prometheus_httpd
]}.

{plugins, [rebar3_run]}.

{relx, [{release, { poc_cowboy_oc, "0.1.0" },
         [
          poc_cowboy_oc,
          sasl,
          recon,
          eper,
          opencensus,
          opencensus_erlang_prometheus,
          prometheus, 
          prometheus_httpd,
          eflame,
        ]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.
